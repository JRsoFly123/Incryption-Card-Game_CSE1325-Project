package cardgame;
import java.util.Arrays;
import java.util.List;

public class Card {

	private String faceName, category;
	private int hp, power;
	//private Image imgage;
	
	
	public Card(String faceName, String category) {
		setFaceName(faceName);
		setCategory(category);
		//setHp(hp);
		//setPower(power);
	}
	
	//private void setPower(int power) {
		
		
	//}

	//private void setHp(int hp) {
		
		
	//}

	public void setFaceName(String faceName) {
		List<String> validFaceNames = getValidFaceNames();
		faceName = faceName.toLowerCase();
		
		if(validFaceNames.contains(faceName))
			this.faceName = faceName;
		
		else
			throw new IllegalArgumentException("Valid face names are: "+validFaceNames);
	}
	
	public static List<String> getValidFaceNames(){
		return Arrays.asList("spy","dragon","shapeShifter","knight","monster","wizard");
	}
	
	
	public void setCategory(String category) {
		List<String> validCategory = getValidCategory();
		category = category.toLowerCase();
		
		if(validCategory.contains(category))
			this.category = category;
		
		else
			throw new IllegalArgumentException("Valid face names are: "+validCategory);
	}
	
	public static List<String> getValidCategory(){
		return Arrays.asList("heavy","medium","light");
	}
	
	
	
	public String toString() {
		return String.format("%s is a %s troop",faceName,category);
	}
	
}
